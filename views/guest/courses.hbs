{{#section 'header'}}
<link rel=" stylesheet" href="./css/styles.css" />
{{/section}}
{{#section 'footer'}}
<script>
    $('.addCourse').on('click', function () {
        const id = $(this).data('id');
        $('#IdKhoaHoc').val(id);
        $('#frmAddCourse').submit();
    });
</script>

<script>
    $('.addWishList').on('click', function () {
        const id = $(this).data('id');
        $('#IdKhoaHoc-WishList').val(id);
        $('#frmAddWishList').submit();
    });
</script>
{{/section}}
