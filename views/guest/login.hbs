{{#section 'header'}}
<link rel="stylesheet" href="../css/styles.css" />
<link href="//cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@4/dark.css" rel="stylesheet">

{{/section}}

<div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card card-signin my-5">
            <div class="card-body">
              <h5 class="card-title text-center">Sign in</h5>
              <form class="form-signin" method="post" action="/login/other">
               {{#if err_message}}
                  <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                    {{err_message}}
                  </div>
                  {{/if}}
                <div class="form-group">
                   <span class="ml-md-auto mr-2"> Chức vụ</span> 
                    <select class="mr-2 form-control mb-2" id="option" name="option">
                            <option>Giảng viên</option>
                            <option>Admin</option>
                    </select> 
                    <input type="text" id="inputUser" class="form-control mt-3 mb-3" name="username" placeholder="Username">
                  <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password">
               
                </div>
  
                {{!-- <div class="form-group">
                  <input type="text" id="inputUser" class="form-control" name="username" placeholder="Username">
                  <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password">
                </div> --}}
  
                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>