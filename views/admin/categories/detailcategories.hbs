{{#section 'header'}}
<link rel=" stylesheet" href="/css/styles.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{{/section}}
{{#section 'footer'}}

<script>
    $("#option").on("change", function () {
        var opt = $(this).val();
        if (opt == '0') { $('tr').show(); return }
        $("tr").each(function () {
            var tr = $(this);
            tr.show();
            if (!tr.hasClass(opt)) {
                tr.hide();
            }
            if (opt == "zero") {
                tr.show();
            }
        });
    });
</script>


{{/section}}

